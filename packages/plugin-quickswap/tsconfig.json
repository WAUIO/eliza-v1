{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "lib": [
            "ES2023"
        ],
        "module": "ESNext",
        "target": "ES2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": false,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist/**/*",
        "node_modules/**/*"
    ]
}